{% extends 'admin/admin.html.twig' %}

{% block title %}
    Gérer les {{ eltAGerer }}
{% endblock %}

{% block main %}
    <div class="container">
        <div class="jumbotron d-flex align-items-center justify-content-center">
            <h2>Gérer les {{ eltAGerer }}</h2>
        </div>
        <div class="row offset-1">
            <h4>Filtrer les {{ eltAGerer }}</h4>
        </div>
        <div class="navbar">
            <form class="form-inline d-flex align-items-center">
                <label>Le nom contient : </label>
                <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
        <table class="table table-striped ">
            <thead>
            <tr>
                <th scope="col">{{ eltAGerer }}</th>
                {% block tableCenterTh %}{% endblock %}
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% block tableBody %}
                {% for campus in listeCampus %}
                <tr>
                    <th scope="row">
                        {{ campus.nom }}
                    </th>
                    <td>
                        <a href="#">Modifier</a>
                        <a href="#">Supprimer</a>
                    </td>
                </tr>
                {% endfor %}
                {{ form_start(campusForm) }}
                <tr>
                    <th scope="row">
                        {{ form_widget(campusForm.nom) }}
                    </th>
                    <td>
                        <button type="submit" class="btn">Ajouter</button>
                    </td>
                </tr>
                {{ form_end(campusForm) }}
            {% endblock %}
            </tbody>
        </table>
    </div>
{% endblock %}
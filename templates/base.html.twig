<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
        {#TODO: MAJ favicon #}
        <link rel="icon" href="../public/img/favicon.png">
        {#TODO: problème title#}
        {% block title %}
            <title>
                Hello !
            </title>
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-md navbar-light bg-light">
                <div class="col-6">
                    <a class="navbar-brand" href="#">
                        <img src="https://source.unsplash.com/1600x800?nature,water" width="30" height="30" class="d-inline-block align-top" alt="" loading="lazy">
                        SortirENI.com
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse col-12 col-md-6 flex-row-reverse text-right" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('home') }}">Accueil <span class="sr-only">(current)</span></a>
                        </li>
                        <!-- If i'm connected -->
                        {% if app.user %}
                            {#TODO : ajout lien href vers monProfil#}
                            <li class="nav-item">
                                <a class="nav-link" href="#">Mon profil</a>
                            </li>
                            {#TODO : ajout lien href vers logout#}
                            <li class="nav-item">
                                <a class="nav-link" href="#">Se déconnecter</a>
                            </li>

                        <!-- If i'm disconnected -->
                        {% else %}
                            {#TODO : ajout lien href vers login#}
                            <li class="nav-item">
                                <a class="nav-link" href="#">Se connecter</a>
                            </li>
                        {% endif %}

                        <!-- If i have admin access -->
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_villes') }}">Villes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_campus') }}">Campus</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
            {% block header %}

            {% endblock %}
        </header>
        {# Affichage des messages flash#}
        {% block messages %}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}

        {% block main %}
            <main>

            </main>
        {% endblock %}

        {% block footer %}
            <footer>

            </footer>
        {% endblock %}

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>

<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Participants" table="participants">
    <unique-constraints>
      <unique-constraint name="participants_pseudo_uk" columns="pseudo"/>
    </unique-constraints>
    <id name="noParticipant" type="integer" column="no_participant">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="pseudo" type="string" column="pseudo" length="30" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nom" type="string" column="nom" length="30" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="prenom" type="string" column="prenom" length="30" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="telephone" type="string" column="telephone" length="15" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="mail" type="string" column="mail" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="motDePasse" type="string" column="mot_de_passe" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="administrateur" type="boolean" column="administrateur" nullable="false"/>
    <field name="actif" type="boolean" column="actif" nullable="false"/>
    <field name="campusNoCampus" type="integer" column="campus_no_campus" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
